    </style>
    -->
    <!-- Main activity theme -->
   <style name="MainActivityTheme" parent="PegadasTheme">
        <item name="android:actionBarStyle">@style/ActionBar.Solid.Pegadas.NoTitle</item>
    </style>

    <!-- Main activity action bar style -->
   <!--<style name="ActionBar.Solid.Pegadas.NoTitle" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">-->
